<div class="container mx-auto p-5 w-9/12">
  <header class="bg-white shadow">
    <div class="p-4 mb-5">
      <h1 class="text-3xl font-bold text-gray-700">{{title}}</h1>
    </div>
  </header>
  {{#with post}}
    <main>
      <div class="border-b-2 mb-5">
        <h3 class="text-xl">{{title}}</h3>
      </div>
      <div class="flex">
        <div class="flex-auto">
          작성자 :
          <b>{{writer}}</b>

        </div>
        <div class="flex-row-reverse">
          조회수 :
          {{hits}}

          | 작성일시 :
          {{dateString createdDt}}

          <button class="btn btn-xs btn-primary" onclick="modifyPost()">수정</button>
          <button class="btn btn-xs btn-warning" onclick="deletePost()">삭제</button>
        </div>
      </div>

      <div class="py-6">
        <pre class="overflow-scroll p-3 border-2 border-gray-200 h-96">{{content}}</pre>
      </div>
    </main>
    <section>
      <div class="border-2 p-2 mb-5">
        <h3 class="text-xl">{{lengthOfList comments}}개의 댓글이 있습니다.</h3>
      </div>

      <div class="mb-10">
        <div class="mb-5">
          <input type="text" class="input input-sm input-bordered" placeholder="이름" />
          <input type="password" class="input input-sm input-bordered" placeholder="비밀번호" />
        </div>
        <div class="space-y-3">
          <textarea class="textarea textarea-bordered w-full" rows="3" placeholder="댓글을입력해주세요."></textarea>
          <button class="btn btn-sm btn-primary">댓글쓰기</button>
        </div>
      </div>
    </section>

    <section>
      <div class="comments space-y-2">
        {{#each comments}}
          <div class="border-b-2 pb-1">
            <div class="flex">
              <div class="flex-auto">
                작성자 :
                <b>{{name}}</b>

              </div>
              <div class="flex-row-reverse">
                작성일시 :
                {{createdDt}}

                <button class="btn btn-xs btn-warning">삭제</button>
              </div>
            </div>
          </div>
          <div>
            <pre>{{comment}}</pre>
          </div>
        {{/each}}
      </div>
    </section>
  {{/with}}

  <footer>
    <div class="mt-10">
      <a class="btn btn-block" href="/">목록으로</a>
    </div>
  </footer>
</div>

